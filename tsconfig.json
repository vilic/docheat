{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "noEmitOnError": true,
    "importHelpers": true,
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "stripInternal": true,
    "sourceMap": true,
    "newLine": "LF",
    "rootDir": "src",
    "outDir": "bld",
    "plugins": [{"name": "tslint-language-service"}]
  },
  "exclude": ["node_modules", "demo"]
}

{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "noEmitOnError": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "stripInternal": true,
        "sourceMap": true,
        "newLine": "LF",
        "outDir": "bld",
        "rootDir": "src"
    },
    "exclude": [
        "node_modules",
        "demo"
    ]
}
